<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="krealll">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="login" type="VARCHAR(60)">
                <constraints  nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(80)">
                <constraints  nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(80)">
                <constraints  nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>



    <changeSet id="1.0.1" author="krealll">
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(45)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="krealll">
        <createTable tableName="user_roles">
<!--            <column name="id" type="BIGINT" autoIncrement="true">-->
<!--                <constraints primaryKey="true" nullable="false" unique="true"/>-->
<!--            </column>-->
            <column name="users_id_user" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column name="roles_id_role" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="krealll">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="users_id_user"
                                 constraintName="fk_user_roles_users1"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.4" author="krealll">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="roles_id_role"
                                 constraintName="fk_user_roles_roles1"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.5" author="krealll">
        <insert tableName="roles">
            <column name="name" value="USER" />
        </insert>
        <insert tableName="roles">
            <column name="name" value="GUEST" />
        </insert>
    </changeSet>


    
</databaseChangeLog>